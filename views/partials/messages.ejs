<% if (typeof errors != 'undefined') { %>
    <% errors.forEach(function(error){ %>
        <div class="alert alert-warning alert-dismissible fade show" style="color: red; background-color: white; border-style:none" role="alert">
            <%= error.msg %>
          </div>
   <% }); %>
<% } %>

<% if(success_msg != '') { %>
    <div class="alert alert-success alert-dismissible fade show" style="color: green; background-color: white; border-style:none" role="alert">
        <%= success_msg %>
      </div>
<% } %>

<% if(error_msg != '') { %>
    <div class="alert alert-warning alert-dismissible fade show" style="color: red; background-color: white; border-style:none" role="alert">
        <%= error_msg %>
      </div>
<% } %>

<% if(error != '') { %>
  <div class="alert alert-warning alert-dismissible fade show"  style="color: red; background-color: white; border-style:none" role="alert">
      <%= error %>
    </div>
<% } %>